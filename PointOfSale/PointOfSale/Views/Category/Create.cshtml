@{ Layout = null; }

@model PointOfSale.Model.CategoryViewModel

<form method="post" asp-action="Create" id="categoryForm" novalidate>
    <div class="row">
        <input type="hidden" asp-for="CategoryId" />        
        <div class="col-md-6 form-group">
            <label>Name</label>
            <input type="text" asp-for="Name" class="form-control" maxlength="160" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-6 form-group">
            <label>Arabic Name</label>
            <input type="text" asp-for="ArabicName" class="form-control" maxlength="500" />
            <span asp-validation-for="ArabicName" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-primary" value="Submit">
    </div>
</form>
<partial name="_ValidationScriptsPartial" />