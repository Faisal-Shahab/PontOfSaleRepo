@{
    ViewData["Title"] = "Categories";
}

<div class="row">
    <div class="col-md-6">
        <h4>List of Categories</h4>
    </div>
    <div class="col-md-6 text-right">
        <button id="add-new" class="btn btn-primary btn-sm">Add</button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered" id="categoryDataTable">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Company Name</td>
                    <td>Category Name</td>
                    <td>Actions</td>
                </tr>
            </thead>
        </table>
    </div>
</div>


<!--begin::Modal-->

<partial name="_modal">
    <!--end::Modal-->

    @section scripts{
        <script src="~/js/pages/category.js" asp-append-version="true"></script>
    }
