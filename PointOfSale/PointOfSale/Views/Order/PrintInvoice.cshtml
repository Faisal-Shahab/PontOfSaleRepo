@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    @*<title>POS Receipt KDF</title>*@
    <script type="text/javascript" src="http://jqueryjs.googlecode.com/files/jquery-1.3.1.min.js"></script>
    <script src="~/css/sweetalert2/sweetalert2.all.min.js"></script>

    <style>

        #invoice-POS {
            font-family: monospace !important;
        }

        #invoice-POS .clientlogo {
            float: left;
            height: 60px;
            width: 60px;
            background: url() no-repeat;
            background-size: 60px 60px;
            border-radius: 50px;
        }

        #invoice-POS .info {
            display: block;
            margin-left: 0;
        }

        #invoice-POS table {
            width: 100%;
        }


        #table td {
            background: white !important;
            margin: 0px;
            padding: 0px;
        }

        th {
            text-align: center;
        }

        .contentTable td {
            font-size: 13px;
        }

        .tblstyle {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
</head>
@model PointOfSale.Model.SaleOrderViewModel

<body style="margin-top: 0px !important;" id='printMe'>

    <div id="invoice-POS" style="background-color: white !important; margin-bottom: 0px !important;padding:3px;">
        <center>
            <h2 style="text-align: center;margin-top: 0px;">Invoice</h2>
            <div class="info" style="margin-top: -10px; margin-bottom: -20px;">
                <img src="/logo2.jpeg" style="width:80%" alt="">
            </div>
            <!--End Info-->
            <h3 style="text-align: center;">@Model.CompanyDetails.Name</h3>
        </center>
        <!--End InvoiceTop-->
        <hr style="color:black;font-weight:boder; margin-top: 0px; margin-bottom: 0px;">

        <!--End Invoice Mid-->
        <!-- Start of Invoice Header -->
        <table style="margin-top: -3px; background-color:#ebdcdc;font-size:13px;">
            <tr>
                <td style="text-align:right;width:50%"><b>Company Reg #</b></td>
                <td style="text-align:left;width:50%">@Model.CompanyDetails.CrNumber</td>
            </tr>
            <tr>
                <td style="text-align:right;width:50%"><b>Tax #</b></td>
                <td style="text-align:left;width:50%">@Model.CompanyDetails.TaxNumber</td>
            </tr>
            <tr style="background-color:white;">
                <td colspan="2" style="text-align:center; background-color:white;">@Model.saleOrder.CreatedAt.ToString("yyyy/MM/dd h:mm tt")</td>
            </tr>
            <tr style="background-color:white;">
                <td style="background-color:white;width:50%;">Invoice #</td>
                <td style="text-align:right;background-color:white;width:50%;">Inv @Model.saleOrder.InvNumber</td>
            </tr>
        </table>
        <hr style="color:black;font-weight:boder; margin-bottom: 0px;">
        <!-- End of Invoice Header -->

        <div id="bot" style="margin-bottom: 5px !important">
            <div id="table">
                <table class="contentTable tblstyle" id="tbl_data">
                    <thead>
                        <tr class="tblstyle" style="background-color:#ebdcdc">
                            <th class="tblstyle" style="width: 55%; text-align:center !important">Item Name</th>
                            <th class="tblstyle" style="width: 15%; text-align:center !important">Rate</th>
                            <th class="tblstyle" style="width: 15%; text-align:center !important">Qty</th>
                            <th class="tblstyle" style="width: 15%;text-align:center !important">Amount</th>
                        </tr>
                    </thead>
                    <!-- End of table Header -->
                    <tbody>
                        @foreach (var item in Model.details)
                        {
                            <tr>
                                <td>@item.ProductId</td>
                                <td>@item.SalePrice</td>
                                <td>@item.Quantity</td>
                                <td>@item.SubTotal</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br>

                <table style="margin-top: -13px;">
                    <tbody>
                        <tr class="tabletitle">
                            <td style="font-weight: bold;" id="customerName">
                            </td>
                            <td class="payment">
                                <h4></h4>
                            </td>
                            <td style="font-weight: bold;">
                                Total Amount:
                            </td>
                            <td class="payment" style="text-align:right;">
                                @Model.saleOrder.Total
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!--End Table-->
            <div id="legalcopy" style="margin-top: -20px !important; margin-bottom: 0px !important;">
                <h4 style="text-align:center; ">**@Model.CompanyDetails.ThankyouNote**</h4>
                <h5 style="text-align: center; margin-top: -18px;">Powered By .net</h5>
            </div>
        </div>
    </div>
</body>



</html>