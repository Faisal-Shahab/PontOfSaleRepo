@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

@model POS.DataAccessLayer.Models.SupplierModel

<form id="kt_ecommerce_add_supplier_form" class="form d-flex flex-column flex-lg-row" data-kt-redirect="/Supplier/Index">
    <!--begin::Main column-->
    <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
        <!--begin::General options-->
        <div class="card card-flush py-4">
            <!--begin::Card header-->
            <div class="card-header">
                <div class="card-title">
                    <h2>@_localizer["General"]</h2>
                </div>
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body pt-0">
                <!--begin::Input group-->
                <div class="mb-10 fv-row">
                    <!--begin::Label-->
                    <input type="hidden" asp-for="SupplierId" />
                    <label class="required form-label">@_localizer["Supplier"] @_localizer["Name"]</label>                 
                    <input type="text" asp-for="Name" class="form-control mb-2" />              
                </div>

                <div class="mb-10 fv-row">
                    <label class="required form-label">@_localizer["Email"] </label>
                    <input type="email" asp-for="Email" class="form-control mb-2" placeholder="something@gmail.com" />
                </div>
                <div class="mb-10 fv-row">
                    <label class="required form-label">@_localizer["Contact"] #</label>
                    <input type="text" asp-for="ContactNo" class="form-control mb-2" />
                </div>
                <div class="mb-10 fv-row">
                    <label class="form-label">@_localizer["Balance"]</label>
                    <input type="text" asp-for="Balance" class="form-control mb-2" />
                </div>
                <div class="mb-10 fv-row">
                    <label class="form-label">@_localizer["Address"]</label>
                    <textarea asp-for="Address" class="form-control mb-2" maxlength="500">@Model.Address</textarea>
                </div>

            </div>
            <!--end::Card header-->
        </div>
        <!--end::General options-->
        <!--end::Automation-->
        <div class="d-flex justify-content-end">
            <!--begin::Button-->
            <a href="/supplier/Index" id="kt_ecommerce_add_supplier_cancel" class="btn btn-light me-5">@_localizer["Cancel"]</a>
            <!--end::Button-->
            <!--begin::Button-->
            <button type="submit" id="kt_ecommerce_add_supplier_submit" class="btn btn-primary">
                <span class="indicator-label">@_localizer["Submit"]</span>
                <span class="indicator-progress">
                    Please wait...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
            <!--end::Button-->
        </div>
    </div>
    <!--end::Main column-->
</form>

@section Scripts{

    <script src="~/js/pages/Supplier/save-supplier.js"></script>
}
