@{
    Layout = null;
}
@model PointOfSale.Model.RegisterViewModel
<!--begin::Form-->

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

<form asp-controller="Account" asp-action="UpdateRegistration" class="form" id="accountForm">
    <!--begin::Input group-->
    <div class="fv-row mb-10">
        <input type="hidden" asp-for="UserName" />
        <label class="required form-label">@_localizer["FullName"]</label>
        <input class="form-control form-control-solid mb-3 mb-lg-0" asp-for="Name" type="text">
        <span asp-validation-for="Name" class="text-danger fs-7"></span>
    </div>
    <div class="fv-row mb-10">
        <label class="required form-label">@_localizer["EmailAddress"]</label>
        <input class="form-control form-control-solid mb-3 mb-lg-0" asp-for="Email" type="text">
        <span asp-validation-for="Email" class="text-danger fs-7"></span>
    </div>
    <div class="fv-row mb-10">
        <label class="form-label">@_localizer["Phone"] #</label>
        <input class="form-control form-control-solid mb-3 mb-lg-0" asp-for="PhoneNumber" type="text">
        <span asp-validation-for="PhoneNumber" class="text-danger fs-7"></span>
    </div>
    <!--end::Input group-->
    <!--begin::Input group-->
    <div class="fv-row mb-10">
        <label class="required fs-6 fw-bold form-label mb-2">@_localizer["Role"]</label>
        <select asp-for="Role" class="form-select form-select-solid fw-bolder" asp-items="@(new SelectList(ViewBag.Roles,"Value","Text"))">
            <option value="">@_localizer["Select"]</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <!--end::Input group-->
    <!--begin::Actions-->
    <div class="text-center">
        <button type="reset" onclick="closeModal()" class="btn btn-light me-3" data-kt-users-modal-action="cancel">@_localizer["Discard"]</button>
        <button type="submit" class="btn btn-primary">
            <span class="indicator-label">@_localizer["Submit"]</span>
            <span class="indicator-progress">
                Please wait...
                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
            </span>
        </button>
    </div>
    <!--end::Actions-->
</form>
<!--end::Form-->
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
